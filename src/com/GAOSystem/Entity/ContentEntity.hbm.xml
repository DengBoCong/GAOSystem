<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.GAOSystem.Entity.ContentEntity" table="content" schema="gaosystem">
        <id name="title">
            <column name="title" sql-type="varchar(50)" length="50" not-null="true"/>
        </id>
        <property name="flag">
            <column name="flag" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="content">
            <column name="content" sql-type="mediumtext"/>
        </property>
        <property name="sub">
            <column name="sub" sql-type="int(11)"/>
        </property>
        <property name="owner">
            <column name="owner" sql-type="varchar(50)" length="50"/>
        </property>
    </class>
</hibernate-mapping>